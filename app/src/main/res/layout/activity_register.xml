<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settingsActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_blue">

        <ImageView
            android:id="@+id/registerActivity_toolbar_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:onClick="onClick" />

        <com.example.cozma.socializareusv.CustomTextViews.TextViewOpenSansBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CONT NOU"
            android:textColor="@color/main_white"
            android:textSize="17sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activityRegisterFirstStep_scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <com.example.cozma.socializareusv.CustomTextViews.TextViewOpenSansBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="INREGISTREAZA-TE"
                android:textColor="@color/main_gray"
                android:textSize="11sp" />

            <com.example.cozma.socializareusv.CustomTextViews.BorderEditText
                android:id="@+id/registerActivity_field_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edit_text"
                android:hint="NUME"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:padding="10dp" />
            <com.example.cozma.socializareusv.CustomTextViews.BorderEditText
                android:id="@+id/registerActivity_field_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edit_text"
                android:hint="PRENUME"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:padding="10dp" />
            <com.example.cozma.socializareusv.CustomTextViews.BorderEditText
                android:id="@+id/registerActivity_field_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edit_text"
                android:hint="NUMAR DE TELEFON"
                android:inputType="number"
                android:maxLines="1"
                android:padding="10dp" />
            <com.example.cozma.socializareusv.CustomTextViews.BorderEditText
                android:id="@+id/registerActivity_field_university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edit_text"
                android:hint="Universitatea"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:padding="10dp" />

            <Button
                android:id="@+id/registerActivity_button_save"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@color/main_blue"
                android:textColor="@color/main_white"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:onClick="onClick"
                android:text="SALVEAZA" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
