<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_marginLeft="15dp">

  <com.example.cozma.socializareusv.CustomTextViews.TextViewOpenSansBold
      android:id="@+id/nav_view_scan_offer"
      style="@style/FadeWhiteText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="80dp"
      android:padding="5dp"
      android:text="Adauga sugestii" />

  <com.example.cozma.socializareusv.CustomTextViews.TextViewOpenSansBold
      android:id="@+id/nav_view_my_offer"
      style="@style/FadeWhiteText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/nav_view_scan_offer"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:padding="5dp"
      android:text="Istoric" />

  <com.example.cozma.socializareusv.CustomTextViews.TextViewOpenSansBold
      android:id="@+id/nav_view_register"
      style="@style/FadeWhiteText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/nav_view_my_offer"
      android:layout_marginTop="10dp"
      android:clickable="true"
      android:onClick="onClick"
      android:padding="5dp"
      android:text="Register" />




  <com.example.cozma.socializareusv.CustomTextViews.TextViewOpenSansBold
      android:id="@+id/nav_view_my_account"
      style="@style/FadeWhiteText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_marginTop="15dp"
      android:padding="5dp"
      android:text="CONTUL MEU" />

  <com.example.cozma.socializareusv.CustomTextViews.TextViewOpenSansBold
      android:id="@+id/nav_view_setting"
      style="@style/FadeWhiteText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/nav_view_my_account"
      android:layout_marginTop="20dp"
      android:padding="5dp"
      android:text="SETARI" />
 </LinearLayout>

 </RelativeLayout>