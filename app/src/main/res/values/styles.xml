<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DialogWhenLarge.NoActionBar" />

    <style name="CustomAlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:width">300dip</item>-->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditText" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CategoryName" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="FadeWhiteText" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/fade_white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="WhiteText" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/full_white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NormalTextSevenOpacity" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/text_color_opacity7</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalTextFiveOpacity" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/text_color_opacity5</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalText" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RadioButton" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/full_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Heading" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubHeading" parent="@style/AppBaseTheme">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabWidgetTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/full_white</item>
        <item name="android:textColorSecondary">@color/main_gray</item>
    </style>

    <style name="AppThemeForTabHost" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>
